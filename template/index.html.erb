<html>
  <head>
    <title>VIM Color Scheme Test</title>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>
    <script type="text/javascript" src="fancybox/jquery.fancybox-1.3.4.pack.js"></script>
    <link rel="stylesheet" href="fancybox/jquery.fancybox-1.3.4.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="https://raw.githubusercontent.com/twbs/bootstrap/master/dist/css/bootstrap.min.css">
    <style>
      body
      {
        background: white;
      }

      a
      {
        border-top: thin none;
        border-left: thin none;
        border-bottom: thin dotted #FF9900;
        border-right: thin none;
        color: Black;
        text-decoration: none;
      }

      a:hover
      {
        color: white;
        background: #FF9900;
      }

      a.frames
      {
        border: thin dotted #FF9900;
      }

      a.frames:hover
      {
        color: white;
        background: #FF9900;
      }

      .colorscheme-box
      {
        height: 300px;
      }

      .colorschemes-row
      {
        height: 375px;
      }
    </style>

    <script language="javascript">
      function changeHeight(h) {
        $('.colorscheme-box').height(h);
        $('.colorschemes-row').height(h+75);
      }

      $(document).ready(function() {
          $("a.iframe").fancybox({
            'width' : 800,
            'height': 600
          });
      });
    </script>
  </head>
  <body>
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <a class="brand" href="#">Vim Color Scheme Test</a>
          <ul class="nav">
            <li class="active"><a href="#">Home</a></li>
          </ul>
        </div>
      </div>
    </div>


    <div class="container">
      <div class="jumbotron">
        <h1>VIM Color Scheme Test</h1>
        <p>
          <br/>
          Select <tt>color boxes</tt> height (in pixels):
          <br/>
          <input type="radio" name="height" value="100"onclick="changeHeight(100);">&nbsp;100</input>
          <input type="radio" name="height" value="200"onclick="changeHeight(200);">&nbsp;200</input>
          <input type="radio" name="height" value="300"onclick="changeHeight(300);" checked>&nbsp;300</input>
          <input type="radio" name="height" value="400"onclick="changeHeight(400);">&nbsp;400</input>
          <input type="radio" name="height" value="500"onclick="changeHeight(500);">&nbsp;500</input>
          <input type="radio" name="height" value="600"onclick="changeHeight(600);">&nbsp;600</input>
        </p>
          <p><a class="btn primary large" href="https://github.com/metalelf0/VimColorSchemeTest-Ruby">Github Repo &raquo;</a></p>
      </div>

        <% color_names.each_with_index do |color_name, index| %>

          <% if index % 3 == 0 %>
            <div class="row colorschemes-row">
          <% end %>

          <div class="col-md-4 colorscheme-box">
            <h5 class="iframe_title"><%= color_name %></h5>
            <a class="frames" href="colorschemes/<%= color_name %>.vim">Download</a> &mdash;
            <a class="iframe" href="<%= "#{language_name}/#{color_name}.html" %>">Preview</a><br/>
            <iframe src="<%= "#{language_name}/#{color_name}.html" %>" frameborder="0" width="100%" height="100%" scrolling="no"></iframe>
          </div>

          <% if index % 3 == 2 %>
            </div>
          <% end %>

        <% end %>
      </div>
      <footer>
        <p>By Andrea Schiavini - Original idea by <a href="http://code.google.com/p/vimcolorschemetest/" target="_blank">maverick.woo</a></p>
      </footer>
    </div>
  </body>
</html>
